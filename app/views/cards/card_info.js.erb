// Fill certain elements with the card info obtained
$("#n_likes").html(<%="#{@info[:n_likes]}"%>);
$("#n_comments").html(<%="#{@info[:n_comments]}"%>);

$("#deck_author").html("<%="#{@info[:author_name]}"%>");
$("#deck_title").html("<%="#{@info[:deck_title]}"%>");

<% if @info[:comments].length > 0 %>
  <% @info[:comments].each do |comment| %>
    $("#comment_list").append("<%= j render partial: "shared/comment", locals: { content: "#{comment.content}", n_likes: "#{comment.likes}", author_name: "#{comment.user.username}" }%>");
  <% end %>
<% else %>
  $("#comment_list").html("<p>No comments</p>");
<% end %>
