// comment is created. Now display the new comment.
var commentCount = parseInt($("#n_comments").html());

if (commentCount > 0) {
  $("#comment_list").append(
    "<%= j render partial: "shared/comment", locals: { content: "#{@comment.content}", n_likes: "#{@comment.likes}", author_name: "#{@comment.user.username}", comment_id: "#{@comment.id}", comment_liked: false } %>"
  );
} else {
  $("#comment_list").html(
    "<%= j render partial: "shared/comment", locals: { content: "#{@comment.content}", n_likes: "#{@comment.likes}", author_name: "#{@comment.user.username}", comment_id: "#{@comment.id}", comment_liked: false } %>"
  );
}

$("#n_comments").html(commentCount+1);
// increment comment count by 1

