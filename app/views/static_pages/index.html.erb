<%= stylesheet_link_tag params[:controller] %>

<div class="content-wrapper">
  <div id="welcome-msg-area" class="huge-msg-area">
    <p>
      Join <b class="orange">Koolio</b> today,<br> for whatever reason.
    </p>
  </div>
  <div class="login-form-wrapper">
    <div id="login-form-card"" class="flipper">
      <div id="signup-form-front" class="login-form flipper-front flip-dir1">
	<form>
	  <input type="text" placeholder="Your username" >
	  <input type="text" placeholder="Your e-mail" >
	  <input type="password" placeholder="Confirm your e-mail">
	  <input type="password" placeholder="Password" >
	  <input type="submit" value="Join" id="submit-sign-up-btn" class="login-form-btn">
	  <span class="login-form-lower-left"><input type="button" id="flip-to-login-btn" value="Login" class="login-form-btn"><b class="login-form-msg">if you have account</b></span>
	</form>
      </div>
      <div id="login-form-back"class="login-form flipper-back flip-dir1">
	<h3>Welcome back.</h3>
	<form>
	  <input type="text" placeholder="Your e-mail" >
	  <input type="password" placeholder="Password" >
	  <input type="submit" value="Login" id="submit-login-btn" class="login-form-btn">
	  <span class="login-form-lower-left"><input type="button" id="flip-to-join-btn" value="Join" class="login-form-btn"><b class="login-form-msg">here</b></span>
	</form>
      </div>
    </div>
  </div>
</div>
