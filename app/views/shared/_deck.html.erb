<%# partial for one deck %>
<% cards = deck.cards.sort_by(&:created_at).reverse.slice(0, limit) %>
<div class="one-deck deck-square" id="deck_<%="#{deck.id}"%>">
  <h3><%="#{deck.title}"%></h3>
  <div class="deck-gear">
    <i class="fa fa-gear"></i>
  </div>
  <div class="four-cards">
    <% cards.each do |card| %>
      <% card_front = JSON.parse(card.front_content) %>
      <div class="scaled-card card-<%="#{card_front['type']}"%>">
	<%= render partial: "shared/card_content_templates/#{card_front['type']}_side", locals: { content: card_front['content'] } %>
      </div>
    <% end %>
  </div>
</div>
