<% if @can_create_deck && render_btn %>
  <div class="add-deck-btn deck-square <%=subdomain(request)%>-subdomain" id="prof-add-deck-btn">
    <div class="add-deck-circle">
      <p>+</p>
    </div>
    <p>create a deck</p>
  </div>
<% end %>
<% @profile_decks.each do |deck| %>
  <%# Take four cards from the deck, ordered by created time %>
  <% if show_deck?(deck) %>
    <%= render partial: "shared/deck", locals: { deck: deck, limit: 4 } %>
  <% end %>
<% end %>
