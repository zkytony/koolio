<%# "content" must have "store_dir" and "file_name", "host" and "descp" properties
    Display the thumbnail version for the image
%>
<div class="card-img-wrapper">
  <img src="<%="#{content['host']}/#{content['store_dir']}/thumb_#{content['file_name']}"%>" alt="IMAGE">
  <% if content['descp'].length > 0 %>
    <div class="card-img-descp">
      <p><%= "#{content['descp']}" %></p>
    </div>
  <% end %>
</div>
