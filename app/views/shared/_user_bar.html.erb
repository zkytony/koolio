<div class="user-short-info <%="#{extra_class}"%>" id="short_info_<%="#{user.id}"%>">
  <div class="short-info-profile">
    <img src="<%= user_avatar_url(user, "front") %>" alt="FRONT">
  </div>
  <div class="short-info-name">
    <%= link_to "#{user.username}", user_profile_path(user), data: { no_turbolink: true} %>
  </div>
  <%= render partial: "shared/follow_button", locals: { user: user } %>
</div>
