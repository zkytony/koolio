<% provide(:meta_keywords, "explore") %>
<% provide(:meta_descp, "Koolio.io is a website where people create and share flippable two-sided cards. Explore other people's creativity, and ignite yours!") %>
<% provide(:og_type, "website") %>
<% provide(:og_url, explore_url) %>
<% provide(:og_img_url, image_url("tmp/logo_bigger.png")) %>
<%= stylesheet_link_tag "users.css" %>
<%= javascript_include_tag "flexible_cards_handler.js" %>
<%= javascript_include_tag "user_explore.js" %>
<%= javascript_include_tag "users.js" %>
<%= render :partial => 'shared/nav' %>
<div id="explore-main-contents-wrapper">
  <div id="recommended-contents-wrapper">
    <%= render :partial => 'shared/recommended' %>
    <!-- info panels -->
    <%= render :partial => 'shared/card_info_panels/like_comment_panel'%>
    <div class="hidden" id="deck-cards-panel">
      <%= render :partial => 'shared/card_info_panels/deck_cards_panel'%>
    </div>
    <!-- end info panels -->
  </div>
  <!-- Place to display full-size image or video -->
  <div id="card-zoom-display-wrapper" class="hidden">
    <div id="card-zoom-display"></div>
  </div>
  <!-- Category select -->
  <div class="hm-left-side-content fixed <%=subdomain(request)%>-subdomain" id="catg-list">
    <ul>
      <li class="catg-item selected" id="catg_all">All</li>
      <% Category.where(subdomain: subdomain(request)).each do |category| %>
	<li class="catg-item" id="catg_<%=category.id%>"><%=category.name%></li>
      <% end %>
    </ul>
  </div>
  <!-- Sort method & Deck/Card select -->
  <div class="hm-right-side-content fixed <%=subdomain(request)%>-subdomain" id="custm-control">
    
    <div class="options-section">
      <h4>Show</h4>
      <ul id="content-type">
	<li id="see-cards" class="selected type-item">Cards</li>
	<li id="see-decks" class="type-item">Decks</li>
      </ul>
    </div> 
    <div class="options-section">
      <h4>Sort By</h4>
      <ul id="sort-method">
	<li id="sort-pop" class="sort-item selected">Popular</li>
	<li id="sort-time" class="sort-item">Newest</li>
      </ul>
    </div>
  </div>
</div>
<div class="dark-overlay hidden" id="overlay-for-focus-card"></div>
<div class="dark-overlay hidden" id="overlay-for-zoom-card"></div>
