<% provide(:title, "#{@user.username}") %>
<%= stylesheet_link_tag "users.css" %>
<%= javascript_include_tag "flexible_cards_handler.js" %>
<%= javascript_include_tag "user_home.js" %>
<%= javascript_include_tag "users.js" %>
<%= render :partial => 'shared/nav' %>
<div id="home-main-contents-wrapper">
  <div id="recommended-contents-wrapper">
    <% if @recommended.size > 0 %>
      <%= render :partial => 'shared/recommended' %>
      <!-- info panels -->
      <%= render :partial => 'shared/card_info_panels/like_comment_panel'%>
      <div class="hidden" id="deck-cards-panel">
	<%= render :partial => 'shared/card_info_panels/deck_cards_panel'%>
      </div>
      <!-- end info panels -->
    <% else %>
      <!-- NO CONTENT MESSAGE -->
      <div class="no-content-msg">
	<div class="msg-title">
	  it's empty here.
	</div>
	<div class="msg-suggestions">
	  <ul>
	    <%= link_to explore_path, data: { no_turbolink: true } do %>
	      <li>
		explore koolio
		<i class="fa fa-compass"></i>
	      </li>
	    <% end %>
	    <li class="no-effect">
	      follow people, and 'favorite' decks
	      <i class="fa fa-eye"></i>
	    </li>
	    <li id="add-card-prompt">
	      create a card
	      <i class="fa fa-plus-circle"></i>
	    </li>
	  </ul>
	</div>
      </div>
      <!-- NO CONTENT MESSAGE -->
    <% end %>
  </div>
  <div id="home-side-contents-wrapper"></div>
</div>
<% if @user.activated? %>
  <div class="add-card-btn-container">
    <button class="add-card-btn" id="add-card-btn"><i class="fa fa-plus"></i></button>
  </div>
  <div class="home-card-editor-container" id="editor-container-home">
    <%= render :partial => 'shared/card_editor' %>
  </div>
<% end %>
<!-- overlays -->
<div class="glass-overlay" id="overlay-for-editor"></div>
<div class="dark-overlay hidden" id="overlay-for-focus-card"></div>
